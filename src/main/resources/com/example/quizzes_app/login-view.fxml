<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="350.0" spacing="20.0" style="-fx-background-color: #ffffff; -fx-border-radius: 10px; -fx-background-radius: 10px;" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.quizzes_app.LoginController">
    <padding>
        <Insets top="40" right="40" bottom="40" left="40" />
    </padding>

    <Label text="Welcome to Quizzes App" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #3498db;" />
    <TextField fx:id="usernameField" promptText="Username" style="-fx-font-size: 14px; -fx-background-color: #f9f9f9; -fx-border-color: #ddd; -fx-padding: 10; -fx-background-radius: 5;" />
    <PasswordField fx:id="passwordField" promptText="Password" style="-fx-font-size: 14px; -fx-background-color: #f9f9f9; -fx-border-color: #ddd; -fx-padding: 10; -fx-background-radius: 5;" />

    <Button onAction="#onLoginButtonClick" text="Login" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10; -fx-background-radius: 5; -fx-font-size: 14px; -fx-max-width: 350;" />
    <Label text="Don't have an account?" style="-fx-font-size: 12px; -fx-text-fill: #777;" />
    <Button text="Register" onAction="#onRegisterButtonClick" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-padding: 8; -fx-background-radius: 5; -fx-font-size: 12px; -fx-max-width: 350;" />

    <Label fx:id="loginMessage" textFill="red" style="-fx-font-size: 14px;" />
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="450.0" prefWidth="400.0" spacing="20.0" style="-fx-background-color: #ffffff; -fx-border-radius: 10px; -fx-background-radius: 10px;" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.quizzes_app.RegistrationController">
    <padding>
        <Insets top="40" right="40" bottom="40" left="40" />
    </padding>

    <Label text="Register for Quizzes" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #3498db;" />
    <TextField fx:id="nameField" promptText="Name" style="-fx-font-size: 14px; -fx-background-color: #f9f9f9; -fx-border-color: #ddd; -fx-padding: 10; -fx-background-radius: 5;" />
    <TextField fx:id="sectionField" promptText="Section" style="-fx-font-size: 14px; -fx-background-color: #f9f9f9; -fx-border-color: #ddd; -fx-padding: 10; -fx-background-radius: 5;" />
    <TextField fx:id="codeField" promptText="Code" style="-fx-font-size: 14px; -fx-background-color: #f9f9f9; -fx-border-color: #ddd; -fx-padding: 10; -fx-background-radius: 5;" />

    <ComboBox fx:id="teacherComboBox" promptText="Select Teacher" style="-fx-background-color: #f9f9f9; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-padding: 10; -fx-max-width: 400;" />
    <ComboBox fx:id="subjectComboBox" promptText="Select Subject" style="-fx-background-color: #f9f9f9; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-padding: 10; -fx-max-width: 400;" />

    <Button onAction="#onRegisterButtonClick" text="Register" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10; -fx-background-radius: 5; -fx-font-size: 14px; -fx-max-width: 400;" />

    <Button text="Back to Login" onAction="#onBackButtonClick" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 8; -fx-background-radius: 5; -fx-font-size: 12px; -fx-max-width: 400;" />

    <Label fx:id="registrationMessage" textFill="red" style="-fx-font-size: 14px;" />
</VBox>
